{
  "expo": {
    "name": "Guard WebView",
    "slug": "guard-webview",
    "scheme": "guardweb",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "automatic",

    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },

    "assetBundlePatterns": ["**/*"],

    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.farfish.guardwebview",
      "infoPlist": {
        "NSCameraUsageDescription": "نحتاج الكاميرا لالتقاط الصور ورفع المستندات.",
        "NSPhotoLibraryUsageDescription": "نحتاج الوصول للصور لاختيار ورفع الملفات.",
        "NSLocationWhenInUseUsageDescription": "نحتاج موقعك للتحقق من الحضور.",
        "WKAppBoundDomains": ["farfish.pythonanywhere.com"]
      }
    },

    "android": {
      "package": "com.farfish.guardwebview"
    },

    "web": { "favicon": "./assets/favicon.png" }
  }
}
